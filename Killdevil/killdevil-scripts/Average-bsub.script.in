#!/bin/tcsh
if( $# != 2 ) then
  echo "Usage: $0 killdevilbmsScript MemoryLimit"
  exit(-1)
endif
set killdevilbmsScript=$1
set MemoryLimit=$2
set Cores=12
set killdeviltoolspath=@KILLDEVILTOOLSPATH@
if( ! -e $killdevilbmsScript) then
  echo "Batchmake script not found - $killdevilbmsScript"
  exit( -1 )
endif
setenv ITK_GLOBAL_DEFAULT_NUMBER_OF_THREADS $Cores
bsub -q day -M $MemoryLimit -n $Cores -x -R "span[hosts=1]" $killdeviltoolspath/BatchMake_1.3 -e $killdevilbmsScript
