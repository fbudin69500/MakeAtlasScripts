### The script uses:
#- ResampleVolume2
#prepare files before computation
#rreg and areg need .gipl.gz files so we convert
#the atlas files to this format
set( count 0)
ForEach( file ${ATLAS_TAG} )
  GetParam(EXT ${ATLAS_EXT} ${count})
  Set( SrcImg ${ATLAS_DIR}/${file}${EXT} )
  Set( DstImg ${tempDir}/${file}.gipl.gz )
  If( ${file} == 'template' )
    Set (transformCmd ${ImageMathDIR}ImageMath ${SrcImg} -rescale 0,10000 -outfile ${DstImg} )
  Else( ${file} == 'template' )
    Set (transformCmd ${ResampleVolume2DIR}ResampleVolume2 ${SrcImg} ${DstImg} -i nn )
  EndIf( ${file} == 'template' )
  echo(${transformCmd})
  Run (output ${transformCmd})
  Echo (${output})
  Inc(${count} 1)
  Int( ${count} )
EndForEach( file ${ATLAS_TAG} )

